<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.pcem"
		name="PC (PCem)"
		version="12.0.0.2"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.keyboard" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions></extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>true</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">PC (PCem) v12 alpha</summary>
		<description lang="en_GB">PCem (short for PC Emulator) is a hypervisor and IBM PC emulator for Windows and Linux that specializes in running old operating systems and software that are designed for IBM PC compatibles. Originally developed as an IBM PC XT emulator, it later emulates other IBM PC compatible computers as well.</description>
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.pcem</source>
	</extension>
</addon>
